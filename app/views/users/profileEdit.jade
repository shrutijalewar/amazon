extends ../shared/template
block content
  .row
    .col-xs-5
      form#edit-profile(role='form', method='post', action='/profile')
        .form-group
          label(for='email') Email
          input.form-control#email(type='email', name='email',  autofocus=true)
        .form-group
          label(for='photo') Photo
          input.form-control#photo(type='text', name='photo')
        .form-group
          label(for='age') Age
          input.form-control#age(type='number', name='age')
        button#edit-profile-submit.btn.btn-primary(type='submit') Submit
