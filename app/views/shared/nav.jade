.navbar.navbar-default(role='navigation')
  .container-fluid
    .navbar-header
      button.navbar-toggle(data-toggle='collapse', data-target='#bs-navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Amazon

    .collapse.navbar-collapse#bs-navbar-collapse
      ul.nav.navbar-nav.navbar-right
        if user
          li: a(href='/profile/edit'): i.fa.fa-pencil-square-o &nbsp; Profile
          li
            form.navbar-form(method='post', action='/logout')
              .form-group
                input(type='hidden', name='_method', value='delete')
                button.btn.btn-danger= user.email || user.username
        else
          li: a(href='/register'): i.fa.fa-sign-in &nbsp; Register
          li: a(href='/login'): i.fa.fa-paper-plane &nbsp; Login
          li: a(href='/auth/twitter'): i.fa.fa-twitter &nbsp; Twitter
          li: a(href='/auth/github'): i.fa.fa-github &nbsp; Github
          li: a(href='/auth/google'): i.fa.fa-google &nbsp; Google
          li: a(href='/auth/facebook'): i.fa.fa-facebook-square &nbsp; Facebook
          li: a(href='/auth/linkedin'): i.fa.fa-facebook-square &nbsp; Linkedin

